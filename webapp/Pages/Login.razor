@page "/login"

<div class="pt-flex">
    <div class="col-md-6 pt-bg pt-bg-login"></div>
    <div class="col-md-6 pt-bg pt-bg-login-2">
        <div class="pt-flex pt-top-100">
            <div class="col-md-3"></div>
            <div class="col-md-6 text-center">
                <p class="pt-text-medium pt-white">Login</p>
                <form>
                <div class="form-group">
                    <input type="email" class="form-control text-center mt-3" id="email" placeholder="Your Email">
                    <input type="password" class="form-control text-center mt-3" id="password" placeholder="Password">
                    <button type="submit" class="btn pt-btn-primary pt-white mt-5">Login</button>
                </div>
                </form>
                    <span class="pt-white pt-text-small mt-5">Don't have an account? <a href="/register">Register</a></span>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
</div>